{
  "root": true,
  "ignorePatterns": ["projects/**/*"],
  "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "project": ["tsconfig.json"],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/component-class-suffix": [
          "error",
          {
            "suffixes": ["Page", "Component"]
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ]
      }
    },
    {
      "files": ["*.html"],
      "extends": ["plugin:@angular-eslint/template/recommended"],
      "rules": {}
    }
  ],
  "plugins": ["perfectionist"],
  "rules": {
    "perfectionist/sort-imports": [
      "error",
      {
        "internalPattern": [
          "~/**",
          "@app/*",
          "@assets/*",
          "@data-templates/*",
          "@features/*",
          "@home/*",
          "@informational/*",
          "@shared/*",
          "@workflows/*",
          "@plots/*",
          "@stages/*",
          "@records/*",
          "@weather-data/*"
        ],
        "customGroups": {
          "value": {
            "app": ["@app/**"],
            "assets": ["@assets/**"],
            "data-templates": ["@data-templates/**"],
            "features": ["@features/**"],
            "home": ["@home/**"],
            "informational": ["@informational/**"],
            "shared": ["@shared/**"],
            "workflows": ["@workflows/**"],
            "plots": ["@plots/**"],
            "stages": ["@stages/**"],
            "records": ["@records/**"],
            "weather-data": ["@weather-data/**"]
          },
          "type": {
            "app": ["@app/**"],
            "assets": ["@assets/**"],
            "data-templates": ["@data-templates/**"],
            "features": ["@features/**"],
            "home": ["@home/**"],
            "informational": ["@informational/**"],
            "shared": ["@shared/**"],
            "workflows": ["@workflows/**"],
            "plots": ["@plots/**"],
            "stages": ["@stages/**"],
            "records": ["@records/**"],
            "weather-data": ["@weather-data/**"]
          }
        },
        "groups": [
          "type",
          ["builtin", "external"],
          "app",
          "assets",
          "data-templates",
          "features",
          "home",
          "informational",
          "shared",
          "workflows",
          "plots",
          "stages",
          "records",
          "weather-data",
          "internal-type",
          "internal",
          ["parent-type", "sibling-type", "index-type"],
          ["parent", "sibling", "index"],
          "object",
          "unknown"
        ]
      }
    ]
  }
}
